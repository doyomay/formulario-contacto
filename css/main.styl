@import 'nib'

body
	font-family 'Indie Flower'
letra-principal = #00b5cb
letra-secundaria = #0073ae
letra-texto = #454545

.titulo
	border 0
	display block
	font-size 4em
	margin-top 1.5em
	text-align center
	color letra-secundaria
.u-btn
	background letra-principal
	border 0
	color #fff
	font-size 30px
	height 53px
	margin-top 20px
	transition 0.3s
	width 125px
	&:hover
		background letra-secundaria
.u-error
	border-bottom dashed 1px red !important
.u-requerido
	&:after
		content '*'
		color #fc391d
		display inline-block
.Formulario
	display block
	height auto
	margin-top 2em
	text-align center
	&-celda
		display block
		margin 2em 0
		&-input
			border 0
			border-bottom dashed 1px letra-texto
			color letra-texto
			height 30px
			padding 5px
			outline none
		&-label
			color letra-principal
			font-size 20px
			text-align left
			width 100px
		&-select
			outline none
			border 0			
		&-input, &-label
			display inline-block 
#mensaje_Enviado
	display none
	width 500px
	margin 0 auto
	text-align center
	h1
		color letra-principal
	h2
		color letra-secundaria
	span
		display block			